    output:
        '{name}.hunalign.segalign'
    shell:
        'xzcat -f {input[1]} | {BITEXTOR}/bitextor-align-segments.py -d {input[0]} -t {TMPDIR} --lang1 {LANG1} --lang2 {LANG2} {USENLTK} --hunalign-dir "{BITEXTOR}/bin" > {output}'

rule alignsegments_bleualign:
    input:
        "{name}.docalign."+"{extension}".format(extension=DOCALIGNEXT)
    output:
        '{name}.bleualign.segalign'
    shell:
        '{BITEXTOR}/bleualign.sh {wildcards.name}.lett.xz {FLANG} {wildcards.name}.docalign {DOC_THRESHOLD} {BLEU_THRESHOLD} {output}'

rule concat_segs:
    input:
        expand("{{dir}}/{webdomain}.{segaligner}.segalign", webdomain=domain_2_fulldomains.keys(), segaligner={SEGMENTALIGNER})
    output:
        "{dir}/{l1}-{l2}.sentalg.xz"
    shell:
        "cat {input} | xz > {output}"

rule cleansegments:
    input:
        "{dir}/{l1}-{l2}.sentalg.xz"
    output:
        "{dir}/{l1}-{l2}.segclean"
    shell:
        'xzcat -f {input} | {BITEXTOR}/bitextor-cleantextalign.py -q {MINQUALITY} -m {MAXLINES} -s > {output}'

