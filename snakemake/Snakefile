        "{dir}".format(dir=config["permanentDir"])+"/{l1}-{l2}.sent.xz"
    shell:
        "ln -s {input} {output}"


rule tmx:
    input:
        "{dir}".format(dir=config["transientDir"])+"/{l1}-{l2}."+"{ext}".format(ext=ELRCSCORES)+".xz"
    output:
        "{dir}".format(dir=config["permanentDir"])+"/{l1}-{l2}.tmx.xz"
