					<ta:tag>dl</ta:tag>
					<ta:tag>dt</ta:tag>
					<ta:tag>h1</ta:tag>
					<ta:tag>h2</ta:tag>
					<ta:tag>h3</ta:tag>
					<ta:tag>h4</ta:tag>
					<ta:tag>h5</ta:tag>
					<ta:tag>h6</ta:tag>
					<ta:tag>head</ta:tag>
					<ta:tag>hr</ta:tag>
