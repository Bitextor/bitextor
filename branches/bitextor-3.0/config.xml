				</ta:type>
				
				<ta:type typename="content">
					<ta:tag>area</ta:tag>
					<ta:tag>fieldset</ta:tag>
					<ta:tag>form</ta:tag>
					<ta:tag>iframe</ta:tag>
					<ta:tag>img</ta:tag>
