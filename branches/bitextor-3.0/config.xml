				</ta:type>
			
				<ta:type typename="format">
					<ta:tag>abbr</ta:tag>
					<ta:tag>acronym</ta:tag>
					<ta:tag>b</ta:tag>
					<ta:tag>big</ta:tag>
					<ta:tag>center</ta:tag>
